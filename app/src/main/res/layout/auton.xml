<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Auton">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView"
            android:layout_gravity="right" />


        <EditText
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:id="@+id/teamNumbers"
            android:hint="Team Number?"
            android:inputType="number"
            android:imeOptions="actionDone" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:entries="@array/spinnerValues"
           />

        <EditText
            android:layout_width="259dp"
            android:layout_height="58dp"

            android:ems="10"
            android:id="@+id/Name"
            android:hint="Scout Name"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:fillViewport="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="564dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tower"
                            android:id="@+id/button4"
                            android:layout_column="0"
                            android:onClick="autonblueTower"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defense 3"
                            android:id="@+id/button17"
                            android:onClick="AutonBluedefense3"
                            android:layout_column="23" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LowBar"
                            android:id="@+id/button15"
                            android:onClick="AutonBluedefense1"
                            />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defense 4"
                            android:id="@+id/button18"
                            android:layout_column="23"
                            android:onClick="AutonBluedefense4"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defense 2"
                            android:id="@+id/button16"
                            android:layout_column="0"
                            android:onClick="AutonBluedefense2"
                            />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defense 5"
                            android:id="@+id/button19"
                            android:onClick="AutonBluedefense5"
                            android:layout_column="23" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reach Defense?"
                            android:id="@+id/checkBox"
                            android:checked="false"
                            android:onClick="reach"
                            android:layout_column="0" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start as Spy?"
                            android:id="@+id/checkBox2"
                            android:checked="false"
                            android:onClick="spy"
                            android:layout_column="23" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Broken?"
                            android:id="@+id/checkBox3"
                            android:checked="false"
                            android:onClick="broken"
                            android:layout_column="0" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Absent?"
                            android:id="@+id/checkBox4"
                            android:checked="false"
                            android:onClick="absent"
                            android:layout_column="23" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Finalize?"
                            android:id="@+id/MatchOver1"
                            android:checked="false"
                            android:layout_column="0"
                            android:onClick="MatchOver1"
                            android:layout_gravity="left|bottom" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Did nothing?"
                            android:id="@+id/nothing"
                            android:checked="false"
                            android:layout_column="23"
                            android:onClick="nothing"/>


                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
